{% extends 'admin.html.twig' %}

{% block title %}album index{% endblock %}

{% block body %}
    <h1>album index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Art</th>
                <th>Description</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for album in albums %}
            <tr>
                <td>{{ album.id }}</td>
                <td>{{ album.name }}</td>
                <td><img src="{{ vich_uploader_asset(album, 'imageFile') }}" alt="{{ album.name }}" /></td>
                <td>{{ album.description }}</td>
                <td>
                    <a href="{{ path('admin_album_show', {'id': album.id}) }}">show</a>
                    <a href="{{ path('admin_album_edit', {'id': album.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('admin_album_new') }}">Create new</a>
{% endblock %}